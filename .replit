modules = ["python-3.11"]
[agent]
integrations = ["python_openai:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg-full", "freetype", "glibcLocales", "lcms2", "libimagequant", "libjpeg", "libjpeg_turbo", "libpng", "libsndfile", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tesseract", "tk", "which", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit RAG App"

[[workflows.workflow]]
name = "Streamlit RAG App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add pypdf2 pdfplumber python-docx pillow faiss-cpu numpy && streamlit run app.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 40713
externalPort = 3001
